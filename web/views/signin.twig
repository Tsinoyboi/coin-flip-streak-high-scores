{% extends 'base.twig' %}

{% set title='Sign in' %}

{% block body %}

<form class="form-horizontal" role="form" action="authenticate" method="POST">
	<div class="form-group {% if not isValid %} has-error {% endif %} has-feedback">
		<label for="username" class="col-sm-2 control-label">Username</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" {% if username is defined %} value="{{ username }}" {% endif %} />
			{% if not isValid %}
			<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
			<span id="inputWarning2Status" class="sr-only">(warning)</span>
			{% endif %}
		</div>
	</div>
	<div class="form-group {% if not isValid %} has-error {% endif %} has-feedback">
		<label for="password" class="col-sm-2 control-label">Password</label>
		<div class="col-sm-10">
			<input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" />
			{% if not isValid %}
			<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
			<span id="inputWarning2Status" class="sr-only">(warning)</span>
			{% endif %}
		</div>
	</div>
	<div class="form-group has-error has-feedback">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Sign in
			</button>
		</div>
	</div>

	{% if not isValid %}
	<div class="form-group has-feedback">
		<label class="col-sm-2 control-label"></label>
		<div class="alert alert-danger col-sm-10" role="alert">
			Login was unsuccessful.
			<br />The user name or password provided is incorrect.
			Please correct the errors and try again.
		</div>
	</div>
	{% endif %}

</form>

{% endblock body %}
