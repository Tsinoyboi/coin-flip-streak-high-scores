<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

  <title>{{title}} - Coin Flip Streak</title>
  <meta name="description" content="super high scores the game II turbo">
  <meta name="author" content="JAForral">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/styles.css?v=1.0">

  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>

<body role="document">

    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar">@_@</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="./">Coin Flip Streak</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li {% if title == 'Home' %} class="active" {% endif %}>
                        <a href="./" aria-label="home">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
                        </a>
                    </li>
                    <li {% if title == 'Flip' %} class="active" {% endif %}>
                        <a href="flip" aria-label="flip">
                            <span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Flip
                        </a>
                    </li>
                    <li {% if title == 'High Scores' %} class="active" {% endif %}>
                        <a href="highscores">
                            <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> High Scores
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <!-- {% if sessionuser | length > 0 %} -->
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{sessionuser}}
                            <!-- {% else %} -->
                            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in
                            <!-- {% endif %} -->
                             <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <!-- {% if sessionuser | length > 0 %} -->
                            <li>
                                <a href="profile" aria-label="profile">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profile
                                </a>
                            </li>
                            <li>
                                <a href="settings" aria-label="settings">
                                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings
                                </a>
                            </li>
                            <li>
                                <a href="signout" aria-label="sign out">
                                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Sign out
                                </a>
                            </li>
                            <!-- {% else %} -->
                            <li {% if title == 'Sign in' %} class="active" {% endif %}>
                                <a href="signin" aria-label="sign in">
                                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in
                                </a>
                            </li>
                            <li {% if title == 'Register' %} class="active" {% endif %}>
                                <a href="register" aria-label="register">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Register
                                </a>
                            </li>
                            <!-- {% endif %} -->
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container" role="main">
        <div class="page-header">
            <h1>{{title}}</h1>
        </div>

        {% block body %}
        {% endblock body %}
  </div>
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <script src="js/scripts.js"></script>
</body>
</html>
