{% extends 'base.twig' %}

{% set title='Register' %}

{% block body %}

<form class="form-horizontal" role="form" action="registrate" method="POST">
	<div class="form-group {% if userExists %} has-error {% endif %} has-feedback">
		<label for="username" class="col-sm-2 control-label">Username</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" {% if username is defined %} value="{{ username }}" {% endif %} />
			{% if userExists %}
			<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
			<span id="inputWarning2Status" class="sr-only">(warning)</span>
			{% endif %}
		</div>
	</div>
	<div class="form-group {% if not isConfirmed %} has-error {% endif %} has-feedback">
		<label for="password" class="col-sm-2 control-label">Password</label>
		<div class="col-sm-10">
			<input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" />
			{% if not isConfirmed %}
			<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
			<span id="inputWarning2Status" class="sr-only">(warning)</span>
			{% endif %}
		</div>
	</div>
	<div class="form-group {% if not isConfirmed %} has-error {% endif %} has-feedback">
		<label for="confirm" class="col-sm-2 control-label">Confirm</label>
		<div class="col-sm-10">
			<input type="password" class="form-control" id="confirm" placeholder="Re-type Password" name="confirm" />
			{% if not isConfirmed %}
			<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
			<span id="inputWarning2Status" class="sr-only">(warning)</span>
			{% endif %}
		</div>
	</div>
	<div class="form-group has-error has-feedback">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Register
			</button>
		</div>
	</div>
	{% if not isConfirmed %}
	<div class="form-group has-feedback">
		<label class="col-sm-2 control-label"></label>
		<div class="alert alert-danger col-sm-10" role="alert">
			Registration was unsuccessful.
			<br />Passwords do not match. Please correct the errors and try again.
		</div>
	</div>
	{% endif %}
	{% if userExists %}
	<div class="form-group has-feedback">
		<label class="col-sm-2 control-label"></label>
		<div class="alert alert-danger col-sm-10" role="alert">
			Registration was unsuccessful.
			<br />Cannot use that username. Please correct the errors and try again.
		</div>
	</div>
	{% endif %}
</form>

{% endblock body %}
